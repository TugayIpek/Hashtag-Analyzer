                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="#yourtag"
                android:textColor="#343434"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
