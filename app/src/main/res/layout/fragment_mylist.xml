<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    android:orientation="vertical"
    tools:context=".ui.mylist.MylistFragment">


    <LinearLayout
        android:id="@+id/addButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <!--background(in image button) can be src, the differs should be search-->
        <Button
            android:id="@+id/addButton1_myList"
            android:layout_width="33dp"
            android:layout_height="33dp"

            android:background="@drawable/plus_circle_outline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Add your own hashtags"
            android:textSize="25sp" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addButtonLayout"
        />

    <LinearLayout
        android:id="@+id/myContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bgkontent"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Collection"
            android:textColor="#343434"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="your title"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/yourTagId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/yourTagId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/yourTagId3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/primary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bgkontent"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Collection"
            android:textColor="#343434"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="your title"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="#yourtag"
            android:textColor="#343434"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/buttonEditSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/primary" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/removeContent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bgkontent"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Are you sure you want to delete this collection?"
            android:textColor="#343434"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/removeYesButton"
                android:text="Yes"
                android:textColor="#ffff"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"/>

            <Button
                android:id="@+id/removeNoButton"
                android:text="No"
                android:textColor="#ffff"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_background"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>